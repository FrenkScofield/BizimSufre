@model IEnumerable<mediabalans_sufre.Models.BLL.Resource>

@{
    ViewData["Title"] = "Index";
}
<div class="row">
    <div class="col-md-6 my-4 mx-auto">
        <div class="card shadow mb-4">
            <div class="card-header py-4">
                Site Çeviri Listesi
            </div>
            <div class="card-body">
                <div class="d-flex justify-content-end my-3">
                    <a asp-action="Create" class="btn btn-outline-dark"><i class="fas fa-fw fa-plus"></i> Çeviri Ekle</a>
                </div>
                <div class="table-responsive">
                    <table class="table table-bordered table-striped table-shorting" id="dataTable">
                        <thead>
                            <tr>
                                <th>
                                    Sayfa
                                </th>
                                <th>Çeviri Key</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr data-id="@item.Id">
                                <th>@item.PageKey</th>
                                <th>@item.Key</th>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn text-primary"><i class="fas fa-fw fa-pencil-alt"></i></a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn text-warning" onclick="return confirm('Silmek istediğinizden emin misiniz?')"><i class="fas fa-fw fa-trash"></i></a>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>