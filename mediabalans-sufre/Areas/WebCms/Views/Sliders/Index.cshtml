@model IEnumerable<mediabalans_sufre.Models.BLL.Slider>

@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-md-6 my-4 mx-auto">
        <div class="card shadow mb-4">
            <div class="card-header py-4">
                Slayder Listesi
            </div>
            <div class="card-body">
                <div class="d-flex justify-content-between my-3">
                    <a href="#" data-action="Sliders" class="btn btn-outline-info confirmqueue"><i class="fas fa-sort"></i> Sirala</a>
                    <a asp-action="Create" class="btn btn-outline-dark"><i class="fas fa-fw fa-plus"></i> Slayder Ekle</a>
                </div>
                <div class="table-responsive">
                    <table class="table table-bordered table-striped table-shorting">
                        <thead>
                            <tr>
                                <th>
                                    Resim
                                </th>
                                <th>
                                    Link
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr data-id="@item.Id">
                                    <td>
                                        <img src="~/files/slider/@item.FileUrl" style="width: 50px;
                                            height: 50px;
                                            object-fit: cover;
                                            border-radius: 10px;
                                            filter: drop-shadow(20px);
                                            filter: drop-shadow(3px 3px 4px #000);
                                            display: block;
                                            margin-left: auto;
                                            margin-right: auto;" />
                                    </td>
                                    <td>
                                        @if (item.Link != null)
                                        {
                                            <span>Var</span>
                                        }
                                        else
                                        {
                                            <span>Yok</span>
                                        }
                                    </td>
                                    <td>
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn text-primary"><i class="fas fa-fw fa-pencil-alt"></i></a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn text-warning" onclick="return confirm('Silmek istediğinizden emin misiniz?')"><i class="fas fa-fw fa-trash"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>