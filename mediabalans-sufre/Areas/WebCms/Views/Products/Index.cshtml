@model IEnumerable<mediabalans_sufre.Models.BLL.Product>

@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-md-12 my-4">
        <div class="card shadow mb-4">
            <div class="card-header py-4">
                Ürün Listesi
            </div>
            <div class="card-body">
                <div class="d-flex justify-content-between my-3">
                    <a href="#" data-action="Products" class="btn btn-outline-info confirmqueue"><i class="fas fa-sort"></i> Sirala</a>
                    <a asp-action="Create" class="btn btn-outline-dark"><i class="fas fa-fw fa-plus"></i> Ürün Ekle</a>
                </div>
                <div class="table-responsive">
                    <table class="table table-bordered table-striped table-shorting" id="dataTable">
                        <thead>
                            <tr>
                                <th>Resim</th>
                                <th>Kategori</th>
                                <th>Başlık</th>
                                <th>Seo-Url</th>
                                <th>Vitrin</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr data-id="@item.Id">
                                <td>
                                    <img src="~/files/prod/@item.FileUrl" style="width: 50px;
                                            height: 50px;
                                            object-fit: cover;
                                            border-radius: 10px;
                                            filter: drop-shadow(20px);
                                            filter: drop-shadow(3px 3px 4px #000);
                                            display: block;
                                            margin-left: auto;
                                            margin-right: auto;" />
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Category.CategoryTranslates.FirstOrDefault().Title)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ProductTranslates.FirstOrDefault().Title)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ProductTranslates.FirstOrDefault().SeoUrl)
                                </td>
                                <td>
                                    @if (item.Approve == true)
                                    {
                                        <span class="btn btn-success">Evet</span>
                                    }
                                    else
                                    {
                                        <span class="btn btn-warning">Hayır</span>
                                    }
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn text-primary"><i class="fas fa-fw fa-pencil-alt"></i></a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn text-warning" onclick="return confirm('Silmek istediğinizden emin misiniz?')"><i class="fas fa-fw fa-trash"></i></a>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>